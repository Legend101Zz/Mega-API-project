<% layout('layout/boilerplate.ejs') %>

<div class="row">
  <h1 class="text-center">New Unit</h1>
  <div class="col-6 offset-3">
    <form action="/admin/courses/<%=id%>/units" method="POST">
      <div>
        <label for="title">Title</label>
        <input type="text" id="title" name="unit[title]" />
      </div>
      <br />
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="unit[description]"
        ></textarea>
      </div>
      <br />

      
      <div>
        <label for="isPaid">isPaid</label>
        <input type="text" id="isPaid" name="unit[isPaid]" />
      </div>
      <br />

      <div>
        <label for="numLessons">numLessons</label>
        <input type="number" id="numLessons" name="unit[numLessons]" />
      </div>
      <br />
      
       
      <div
        <label for="tag">tags</label>
        <input type="text" id="tag" name="unit[tag]" />
      </div>
      <br />

      <button class="btn btn-success">Add Units</button>
      <br />
      <br />
      <footer>
        <a href="/admin/courses/<%=id%>/units/new">All Units</a>
      </footer>
    </form>
  </div>
</div>
